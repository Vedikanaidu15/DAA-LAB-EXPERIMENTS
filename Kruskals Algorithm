#include <stdio.h>


void unionSet(int parent[], int x, int y) {
	int xroot=find(parent, x);
	int yroot=find(parent, y);
	parent[yroot] = xroot;
	// Write your code here...
}


void kruskalMST(int **cost, int V) {
	Edge edges[V*V];
	int edgeCount=0;
	for(int i=0; i<V; i++){
		for(int j=i+1; j<V; j++){
			if(cost[i][j]!=INF){
				edges[edgeCount].u = (i<j) ? i:j;
				edges[edgeCount].v = (i<j) ? j:i;
				edges[edgeCount].weight = cost[i][j];
				edgeCount++;
			}
		}
	}
	qsort(edges, edgeCount, sizeof(Edge), compare);
	int parent[V];
	for(int i=0; i<V; i++)
		parent[i] = i;
	int totalCost = 0;
	int mstEdges = 0;
	// Write your code here...
	for(int i=0; i<edgeCount && mstEdges<V-1; i++){
		int u = edges[i].u;
		int v = edges[i].v;
		int setU = find(parent, u);
		int setV = find(parent, v);
		if (setU != setV){
			printf("Edge %d:(%d, %d) cost:%d\n", mstEdges, u, v, edges[i].weight);
			totalCost +=edges[i].weight;
			unionSet(parent, setU, setV);
			mstEdges++;
		}
	}
	printf("Minimum cost= %d\n", totalCost);
}


int main() {
    int V;
    printf("No of vertices: ");
    scanf("%d", &V);

    int **cost = (int **)malloc(V * sizeof(int *));
    for (int i = 0; i < V; i++)
        cost[i] = (int *)malloc(V * sizeof(int));

    printf("Adjacency matrix:\n");
    for (int i = 0; i < V; i++)
        for (int j = 0; j < V; j++)
            scanf("%d", &cost[i][j]);

    kruskalMST(cost, V);

    for (int i = 0; i < V; i++)
        free(cost[i]);
    free(cost);

    return 0;
}
